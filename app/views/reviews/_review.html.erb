
<div class="review">

<p><%= review.rating %></p>
<p class="review-comment"><%= review.comment %></p>

<% if user_signed_in? %>
    <% if review.user_id == current_user.id %>
        
<div class="links btn-groups">
<%= link_to "Wijzig", edit_good_review_path(review.good, review), class: "btn btn-custom" %>
<%= link_to "Verwijderen", good_review_path(review.good, review), method: :delete, data: { confirm: "Ben je zeker?" }, class: "btn btn-custom" %>
</div>
<% end %>
<% end %>
</div>
